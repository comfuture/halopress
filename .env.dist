# Copy to .env and adjust for your environment.
# Never commit real secrets in .env

NUXT_AUTH_ORIGIN=http://localhost:3000/api/auth
NUXT_AUTH_SECRET=dev-secret-change-me

# OAuth (enable via env or DB settings)
NUXT_OAUTH_SETTINGS_SOURCE=env+db
NUXT_OAUTH_PROVIDERS=google
NUXT_OAUTH_CREDENTIALS_ENABLED=true
NUXT_OAUTH_GOOGLE_ENABLED=true
NUXT_OAUTH_GOOGLE_CLIENT_ID=
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=
NUXT_OAUTH_GOOGLE_ENCRYPTION_KEY=

# Encryption secret for settings values
NUXT_SECRET=
